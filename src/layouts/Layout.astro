---
import Navbar from "../components/navbar.astro";
import MyFooter from "../components/footer.astro";
import "../styles/main.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <MyFooter />
  </body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggleButton = document.getElementById('dark-mode-toggle');
      const htmlElement = document.documentElement;

      // Sayfa yüklendiğinde mevcut modu kontrol et ve uygula
      const currentMode = localStorage.getItem('darkMode');
      if (currentMode === 'enabled') {
        htmlElement.classList.replace('light', 'dark');
      } else {
        htmlElement.classList.replace('dark', 'light');
      }

      toggleButton.addEventListener('click', function() {
        const isDarkMode = htmlElement.classList.contains('dark');
        if (isDarkMode) {
          htmlElement.classList.replace('dark', 'light');
          localStorage.setItem('darkMode', 'disabled'); // Dark mode devre dışı
        } else {
          htmlElement.classList.replace('light', 'dark');
          localStorage.setItem('darkMode', 'enabled'); // Dark mode etkin
        }
      });
    });
  </script>