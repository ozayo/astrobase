---
import { Image, Picture } from "@astrojs/image/components";
import HeroPic from "../assets/pexels-pixabay-262488.jpeg";
import { Icon } from "astro-icon";
import Link from "../components/link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block">
    <!-- <Picture src={heroImage} widths={[400, 800, 1200]} alt="descriptive text" /> -->
    <!-- <Image src={HeroPic} width={600} alt="descriptive text" /> -->
    <Picture
      src={HeroPic}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="webp"
    />
  </div>
  <div>
    <!-- <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"> -->
    <h1>
      Another website <br /><span
        class="underline decoration-wavy decoration-2 underline-offset-4 decoration-red-800"
        >done</span
      > with
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600"
        >Astro
      </span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      This website built with Astro.build and TailwindCSS. This is a template
      for startups, marketing websites & landing pages. You can quickly create
      any website with this starter.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/about"
        class="flex gap-1 items-center justify-center"
        rel="noopener"
      >
        <Icon class="text-white w-5 h-5" name="mdi:code-braces-box" />
        About the project
      </Link>
      <Link
        href="/home"
        style="outline"
        rel="noopener"
        href="https://github.com/ozayo/astrobase"
        class="flex gap-1 items-center justify-center"
        target="_blank"
      >
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </div>
</main>
